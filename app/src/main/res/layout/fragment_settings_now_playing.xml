<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="0dp">

    <com.hardcodecoder.pulsemusic.views.AccentColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="@string/np_category_style"
        android:textAppearance="@style/Appearance.Text.Overline" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItemView
        android:id="@+id/now_playing_screen_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        app:settingItemDesaturatedColorsInDarkMode="false"
        app:settingItemIcon="@drawable/ic_now_playing_style"
        app:settingItemIconBackgroundColor="?attr/windowBackgroundColor"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/np_screen_style_desc"
        app:settingItemTitle="@string/np_screen_style_title" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItemView
        android:id="@+id/now_playing_album_cover_corner_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:textStyle="normal"
        app:settingItemDesaturatedColorsInDarkMode="false"
        app:settingItemIcon="@drawable/ic_rounded_corner"
        app:settingItemIconBackgroundColor="?attr/windowBackgroundColor"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/np_cover_corner_radius_desc"
        app:settingItemTitle="@string/np_cover_corner_radius_title" />

    <com.hardcodecoder.pulsemusic.views.AccentColorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="32dp"
        android:text="@string/np_category_controls"
        android:textAppearance="@style/Appearance.Text.Overline" />

    <com.hardcodecoder.pulsemusic.views.SettingsToggleableItem
        android:id="@+id/np_enable_seek_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:settingToggleableItemText="@string/np_enable_seek_buttons_desc"
        app:settingToggleableItemTitle="@string/np_enable_seek_buttons_title" />

    <com.hardcodecoder.pulsemusic.views.SettingsCategoryItemView
        android:id="@+id/now_playing_seek_duration_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:textStyle="normal"
        app:settingItemDesaturatedColorsInDarkMode="false"
        app:settingItemIcon="@drawable/ic_fast_forward"
        app:settingItemIconBackgroundColor="?attr/windowBackgroundColor"
        app:settingItemIconColor="?attr/colorControlNormal"
        app:settingItemText="@string/np_seek_duration_desc"
        app:settingItemTitle="@string/np_seek_duration_title" />
</LinearLayout>
