<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    android:gravity="center">

    <ImageView
        style="@style/ButtonStyle24"
        android:contentDescription="@string/iv_content_desc"
        android:src="@drawable/ic_playlist"
        app:tint="?attr/colorControlNormal" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/playlist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="@string/playlist_current_queue"
        android:textAppearance="@style/Appearance.Text.Body1" />

    <ImageView
        android:id="@+id/edit_btn"
        style="@style/ButtonStyle24"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/iv_btn_action_description"
        android:src="@drawable/ic_edit"
        android:visibility="visible" />
</LinearLayout>