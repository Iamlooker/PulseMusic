<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/pt_navigation"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_action_btn"
        android:padding="6dp"
        app:tint="?attr/colorControlNormal"
        tools:src="@drawable/ic_menu" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="84dp"
        android:layout_marginEnd="84dp"
        android:gravity="center"
        android:textAppearance="@style/Appearance.Text.Base.Headline6"
        tools:text="@string/nav_home" />

    <ImageView
        android:id="@+id/pt_option_always_visible"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/pt_options"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_action_btn"
        android:padding="6dp"
        app:tint="?attr/colorControlNormal"
        tools:src="@drawable/ic_search" />

    <ImageView
        android:id="@+id/pt_options"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/desc_action_btn"
        android:padding="6dp"
        app:tint="?attr/colorControlNormal"
        tools:src="@drawable/ic_options" />
</merge>