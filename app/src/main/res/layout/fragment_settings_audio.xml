<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="0dp">

        <com.hardcodecoder.pulsemusic.views.AccentColorTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="@string/audio_category_auto_play"
            android:textAppearance="@style/Appearance.Text.Overline" />

        <com.hardcodecoder.pulsemusic.views.SettingsToggleableItem
            android:id="@+id/audio_device_bluetooth_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:settingToggleableItemText="@string/audio_category_toggle_bluetooth_text"
            app:settingToggleableItemTitle="@string/audio_category_toggle_bluetooth_title" />

        <com.hardcodecoder.pulsemusic.views.SettingsCategoryItemView
            android:id="@+id/audio_device_bluetooth_action_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            app:settingItemDesaturatedColorsInDarkMode="false"
            app:settingItemIcon="@drawable/ic_play_circle"
            app:settingItemIconBackgroundColor="?windowBackgroundColor"
            app:settingItemIconColor="?attr/colorControlNormal"
            app:settingItemText="@string/audio_category_select_bluetooth_action_text"
            app:settingItemTitle="@string/audio_category_select_bluetooth_action_title" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>