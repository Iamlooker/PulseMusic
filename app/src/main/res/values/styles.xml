<resources>

    <!-- Specific Feed activity theme -->
    <style name="ActivityThemeLight" parent="PulseLightTheme" />

    <style name="ActivityThemeDark" parent="PulseDarkTheme" />

    <style name="ActivityThemeKindaDark" parent="PulseSignatureTheme" />

    <style name="ActivityThemeBlack" parent="PulseDarkTheme.Black" />

    <style name="ButtonStyleBase">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:contentDescription">@string/icon_desc</item>
        <item name="tint">?attr/colorControlNormal</item>
    </style>

    <style name="ButtonStyle36" parent="ButtonStyleBase">
        <item name="android:padding">6dp</item>
    </style>

    <style name="ButtonStyle24" parent="ButtonStyleBase">
        <item name="android:padding">12dp</item>
    </style>

    <style name="BottomDialogOptionsMenuTextStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:textAppearance">@style/Appearance.Text.Subtitle2</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="drawableTint">?attr/colorControlNormal</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="BottomSheetStandard" parent="@style/Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetRounded" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>

    <style name="RoundedBottomSheet" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetRounded</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
    </style>

    <style name="RoundedBottomSheetLight" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheetRounded</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
    </style>

    <style name="CustomBottomSheetLight" parent="@style/RoundedBottomSheetLight">
        <item name="bottomSheetStyle">@style/BottomSheetStandard</item>
    </style>

    <style name="CustomBottomSheet" parent="@style/RoundedBottomSheet">
        <item name="bottomSheetStyle">@style/BottomSheetStandard</item>
    </style>

    <style name="TextAppearanceToolbar" parent="Appearance.Text.Headline6" />

    <style name="TextAppearanceExpanded" parent="Appearance.Text.Headline4">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceSearch" parent="Appearance.Text.Body1">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="ItemTitle" parent="Base.ItemTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemSub" parent="Base.ItemSub" />
</resources>